<h1>Submit ACH Standalone Credit Request Using Payment Token</h1>
<% unless @response.nil? %>
  <pre>
  <%= YAML::dump(@response) %>
  </pre>
<% end %>

<%= form_tag do %>
  <%= field_set_tag "ACH Standalone Credit" do %>
  	<%= render "shared/field", name: :merchantRefNum, default: SecureRandom.uuid %>
  	<%= render "shared/field", name: :amount %>
  	<%= render "shared/field", name: :paymentToken, default: @ach_paymentToken %>
  	<%= render "shared/field", name: :payMethod, default: "PPD" %>
    <%= render "shared/field", name: :customerIp, default: "192.0.126.111" %>
  <% end %>
  <%= submit_tag "Submit", class: "btn btn-default" %>
<% end %>
