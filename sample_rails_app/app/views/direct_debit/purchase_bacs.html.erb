<h1>Submit a BACS Purchase Request</h1>
<% unless @response.nil? %>
  <pre>
  <%= YAML::dump(@response) %>
  </pre>
<% end %>

<%= form_tag do %>
  <%= field_set_tag "BACS Purchase" do %>
  	<%= render "shared/field", name: :merchantRefNum, default: SecureRandom.uuid %>
  	<%= render "shared/field", name: :amount %>
  	<%= render "shared/field", name: :accountHolderName, default: "XYZ Company" %>
  	<%= render "shared/field", name: :accountNumber, default: @accountNumber %>
  	<%= render "shared/field", name: :sortCode, default: @sortCode %>
  	<%= render "shared/field", name: :mandateReference, default: @mandateReference %>

  	<%= render "shared/field", name: :customerIp, default: "192.0.126.111" %>
  	<%= render "shared/field", name: :firstName, default: "Joe" %>
  	<%= render "shared/field", name: :lastName, default: "Smith" %>
  	<%= render "shared/field", name: :email, default: "Joe.Smith@hotmail.com" %>
  	
  	<%= render "shared/field", name: :street, default: "100 Queen Street West" %>
  	<%= render "shared/field", name: :city, default: "Shefford" %>
  	<%= render "shared/field", name: :state, default: "Lancashire" %>
  	<%= render "shared/field", name: :country, default: "GB" %>
  	<%= render "shared/field", name: :zip, default: "LS11 1BA" %>
  	<%= render "shared/field", name: :phone, default: "3102649010" %>
    <%= render "shared/field", name: :sortCode, default: "070246" %>
  <% end %>
  <%= submit_tag "Submit", class: "btn btn-default" %>
<% end %>
